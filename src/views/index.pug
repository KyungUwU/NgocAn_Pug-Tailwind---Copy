doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Villa Agency - Real Estate Tailwind

    //- Fonts
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap")
  
    //- Stylesheets
    link(rel="stylesheet", href="tailwind.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(rel="stylesheet", href="https://unpkg.com/swiper@7/swiper-bundle.min.css")

    //- Favicon
    link(rel="icon", href="/favicon.ico", type="image/x-icon")

  body(class="font-['Poppins'] bg-white text-gray-800")

    //- Variables & Mixins
    include ../includes/variables.pug
    include ../includes/icon.pug

    //- Preloader
    include ../components/layouts/preloader.pug

    //- Sub-header
    include ../components/layouts/subheader.pug

    //- Header
    -
      const activePage = 'Home';
    include ../components/layouts/header.pug

    //- Main Banner
    include ../components/sections/mainBanner.pug

    //- Featured Section
    include ../components/sections/featuredSection.pug

    //- Video Section
    include ../components/atoms/videoSection.pug

    //- Fun Facts
    include ../components/atoms/funFacts.pug

    //- Best Deal Tabs
    include ../components/atoms/bestDeal.pug

    //- Properties Grid
    include ../components/sections/propertiesGrid.pug

    //- Contact Section (gồm cả Contact CTA)
    include ../components/sections/contactSection.pug

    //- Footer
    include ../components/layouts/footer.pug

    //- Scripts
    script(src="https://cdn.jsdelivr.net/npm/alpinejs", defer)
    script(src="https://unpkg.com/swiper@7/swiper-bundle.min.js")
    script.
      window.addEventListener('load', function () {
        const preloader = document.getElementById('js-preloader');
        if (preloader) {
          preloader.style.transition = 'opacity 0.5s ease';
          preloader.style.opacity = '0';
          setTimeout(function () {
            preloader.style.display = 'none';
          }, 500);
        }
      });
    script.
      const swiper = new Swiper('.swiper', {
        loop: true,
        autoplay: { delay: 5000 },
        pagination: { el: '.swiper-pagination', clickable: true },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev'
        },
      });
