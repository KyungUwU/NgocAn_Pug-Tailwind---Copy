// File: src/views/properties.pug

extends layout.pug

//– Tab title
block title
  | Properties – Villa Agency

//– Set active page for header
block header_vars
  - var activePage = 'Properties'

block content
  //– load mixin for property cards
  include /components/atoms/propertiesCard.pug

  //– Page Heading
  .bg-gray-50.py-12
    .container.mx-auto.text-center
      span.text-sm.text-gray-500
        a(href="/", class="hover:text-orange-500") Home
        |  / Properties
      h1.text-3xl.font-bold.mt-2 Properties

  //– Filter Buttons
  .container.mx-auto.py-6.flex.flex-wrap.gap-3.justify-center
    each filter, i in bestDealTabs
      button(
        type="button",
        class="filter-btn px-4 py-2 rounded border hover:bg-orange-500 hover:text-white transition",
        data-filter=(i === 0 ? '*' : '.' + filter.toLowerCase().replace(' ', ''))
      )= filter

  //– Properties Grid
  .bg-gray-50.py-12
    .container.mx-auto
      .grid(class="md:grid-cols-3 gap-8")
        each prop in properties
          +PropertiesCard(prop)

  //– Pagination
  .container.mx-auto.flex.justify-center.space-x-2.mt-8
    each p, i in [1, 2, 3, '>>']
      a(
        href="#",
        class=(i === 1 
          ? 'bg-orange-500 text-white' 
          : 'bg-gray-200 text-gray-800 hover:bg-orange-500 hover:text-white'
        ) + ' px-3 py-1 rounded'
      )= p
