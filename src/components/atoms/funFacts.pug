.section.bg-white.py-12
  .container.mx-auto
    .grid(class="md:grid-cols-3 gap-8 text-center")
      each fact in funFacts
        .relative(class="bg-orange-50 p-6 rounded-lg")
          .absolute(
            class="top-0 right-0 transform translate-x-1/2 -translate-y-1/2"
          )
            div.w-6.h-6.bg-orange-500.rounded-full(style="position:absolute;width:50px;height:50px;background-color:#f35525;border-radius:50%;right:-25px;top:-25px;")
          // Số
          h2.text-4xl.font-bold.text-orange-500= fact.num
          // Nhãn
          p.mt-2.text-gray-700= fact.label